%section.content-section
  %ul.dash-head
    %li.table-title Last Two Weeks 
    %li.dash-head-update
      = link_to "Update Runs", fetch_runs_path, :method => :get, :class => "update-run-link"
  %dl.dash-stats
    %dt
    %dd.dash-set
      %span.data<> #{@stats.total_distance}
      %span.data-marker mi
      %p.data-title Total Distance

    %dd.dash-set
      %span.data<> #{@stats.average_pace}
      %span.data-marker /mi
      %p.data-title Average Pace

    %dd.dash-set
      %span.data<> #{@stats.longest_run}
      %span.data-marker mi
      %p.data-title Longest Run

  %h2.table-title Run Logs
  %table.table-main
    %thead
      %tr
        %th.caption Name
        %th.caption Date
        %th.caption Distance 
        %th.caption Time
        %th.caption Average Pace
        %tbody
        - @stats.runs.each do |run|
          %tr
            %td
              = run.name
            %td
              = run.format_date
            %td
              = "#{run.miles} mi"
            %td
              = run.time_in_minutes 
            %td
              = "#{run.mile_pace_in_minutes} /mi"
