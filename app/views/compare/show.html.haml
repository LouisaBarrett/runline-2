%section.content-section
  %h2.table-title Aggregate Stats 14 Days
  %table.table-main
    %thead
      %tr
        %th.caption Runner
        %th.caption Total Miles
        %th.caption Average Pace
        %th.caption Longest Run
        %tbody
          %tr
            %td
              = @current_user.username
            %td
              = @current_user.total_distance_in_miles
            %td
              = @current_user.total_average_mile_pace
            %td
              = @current_user.longest_run.miles
          %tr
            %td
              = @friend.username
            %td
              = @friend.total_distance_in_miles
            %td
              = @friend.total_average_mile_pace
            %td
              = @friend.longest_run.miles
          %tr
            %td Difference
            %td
              = @diff_miles
            %td
              = @current_user.compare_total_average_mile_pace_with(@friend)
            %td
              = @diff_longest_run

  %h2.table-title Run Logs:  #{@current_user.username} 
  %table.table-main
    %thead
      %tr
        %th.caption Run
        %th.caption Distance
        %th.caption Run Time
        %th.caption Workout Datetime
        %tbody
        - @my_runs.each do |run|
          %tr
            %td
              = run.name
            %td
              = run.miles
            %td
              = run.time_in_minutes
            %td  
              = run.workout_datetime
  %h2.table-title Run Logs:  #{@friend.username}
  %table.table-main
    %thead
      %tr
        %th.caption Run
        %th.caption Distance
        %th.caption Run Time
        %th.caption Workout Datetime
        %tbody
        - @friend_runs.each do |run|
          %tr
            %td
              = run.name
            %td
              = run.miles
            %td
              = run.time_in_minutes
            %td  
              = run.workout_datetime

