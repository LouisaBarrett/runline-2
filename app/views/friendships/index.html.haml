%section.content-section
  %h2.table-title Current Friends
  %table.table-main
    %thead
      %tr
        %th.caption Name
        %tbody
        - current_user.total_approved_friendships.each do |friendship|
          %tr
          - if friendship.user_id == current_user.id
            %td
              = friendship.friend.username
              = button_to "Remove Friend", remove_friendship_path(friendship), :method => :delete, :form_class => "friend-buttons"
              = button_to "Compare", compare_path(friendship.friend.id), :method => :get, :form_class => "friend-buttons"
          - else
            %td 
              = friendship.user.username
              = button_to "Remove Friend", remove_friendship_path(friendship), :method => :delete, :form_class => "friend-buttons"
              = button_to "Compare", compare_path(friendship.user.id), :method => :get, :form_class => "friend-buttons"

  %h2.table-title Pending Friends
  %table.table-main
    %thead
      %tr
        %th.caption Name
        %tbody
          - current_user.pending_inverse_friendships.each do |friendship|
            %tr
              %td
                = friendship.user.username
                = button_to "Reject", reject_friendship_path(friendship), :method => :delete, :form_class => "friend-buttons"
                = button_to "Approve", approve_friendship_path(friendship), :method => :put, :form_class => "friend-buttons"

