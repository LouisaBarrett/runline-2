%section.content-section
  %h2.table-title Your Profile
  %div.bullet
    %p.bullet-num 01
    %p.bullet-line Your MapMyFitness Photo
    = image_tag(current_user.photo_url)

  %div.bullet
    %p.bullet-num 02
    = form_for :user, :html => {:class => 'bullet-line'} do |f|
      = f.label :email
      = f.text_field :email, :value => current_user.email
      = f.submit "Update Email", :class => 'submit-btn'

      = link_to "Add Strava", "/auth/strava" 
